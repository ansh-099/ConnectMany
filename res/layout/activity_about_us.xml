<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="90dp"
                    android:layout_marginTop="20dp"
                    android:background="#2fa881" />
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_connect"
                    />
                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="105dp"
                    android:background="#263238" />
<TextView
    android:layout_gravity="bottom"
    android:gravity="center"
    android:text="We Are Here To Help Connext People All Around us."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/card_feedB"
                app:cardCornerRadius="7dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_feedback_black_24dp"
                    />
                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="105dp"
                    android:background="#263238" />
                <TextView
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="23dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="Give Us Feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </android.support.v7.widget.CardView>

        </LinearLayout>




    </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="7dp"
            android:layout_gravity="center"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="Contact us- 7838447218"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Email-ansh.099@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="110dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_contacts_black_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />


        </android.support.v7.widget.CardView>

    </LinearLayout>
    

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/setting_in_aboutus"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/ic_settings_black_24dp"
        app:layout_anchor="@id/bottom_bar12"
        />
    <android.support.design.bottomappbar.BottomAppBar
        android:id="@+id/bottom_bar12"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/colorPrimary"
        app:fabAttached="true"
        app:fabAlignmentMode="end"
        android:layout_height="@dimen/mtrl_bottomappbar_height" />


</android.support.design.widget.CoordinatorLayout>