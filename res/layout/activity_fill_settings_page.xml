<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".FIllSettingsPage">

    <ImageView
        android:elevation="10dp"
        android:id="@+id/fill_image"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="230dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_setting"
        android:layout_width="300dp"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="top|center"
        android:layout_height="450dp" >
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_alignParentStart="true"
                        android:layout_width="8dp"
                        android:background="#2fa881"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="670dp"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Settings"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:textColor="#9ACD32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Username"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fill_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="55dp"
                        android:text="Name"
                        android:textColor="#000000"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="90dp"
                        android:text="Email" />
                    <TextView
                        android:textSize="19dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="115dp"
                        android:text="Email"
                        android:id="@+id/fill_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="150dp"
                        android:layout_marginLeft="20dp"
                        android:text="Age-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="175dp"
                        android:id="@+id/fill_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:layout_marginTop="230dp"
                        android:layout_marginLeft="20dp"
                        android:text="Gender-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="255dp"
                        android:id="@+id/Fill_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="310dp"
                        android:layout_marginLeft="20dp"
                        android:text="DOB-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="335dp"
                        android:id="@+id/fill_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="390dp"
                        android:layout_marginLeft="20dp"
                        android:text="Status-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginTop="415dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/fill_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="470dp"
                        android:layout_marginLeft="20dp"
                        android:text="Work-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginTop="495dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/fill_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="550dp"
                        android:layout_marginLeft="20dp"
                        android:text="Country-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginTop="575dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/fill_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />






                    <android.support.design.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="650dp"
                        android:layout_gravity="center_horizontal"
                        app:strokeColor="@color/colorPrimaryDark"
                        app:strokeWidth="2dp">

                        <Button
                            android:id="@+id/fill_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:text="Save" />


                    </android.support.design.card.MaterialCardView>


                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>




</android.support.design.widget.CoordinatorLayout>